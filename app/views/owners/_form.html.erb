<%= form_with model: @owner, builder: CustomFormBuilder do |form| %>
  <%= render "shared/errors", object: form.object %>

  <%= form.text_field :name, autofocus: true %>
  <%= form.select :status, translated_enum_options_for(form.object, "statuses") %>
  <%= form.text_area :street %>
  <%= form.text_field :zip %>
  <%= form.text_field :town %>
  <%= form.country_select :country %>
  <%= form.email_field :email %>
  <%= form.phone_field :phone %>

  <%= form.submit %>

<% end %>